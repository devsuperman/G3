<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Garimpo3.Views.Peons.DetailsPeonPage"
             xmlns:models="clr-namespace:Garimpo3.Models"             
             x:DataType="models:Peon"
             Title="Peão">
    <ContentPage.Content>        
        <StackLayout Padding="20">
            
            <Label Text="Nome"/>
            <Label Text="{Binding Name}"/>

            <Label Text="Saldo"/>
            <Label Text="{Binding Balance}"/>

            <Label Text="Ativo"/>
            <Switch IsToggled="{Binding Active}" IsEnabled="False" HorizontalOptions="Start"
                    OnColor="CadetBlue"/>

            <Button Text="Editar" Clicked="Button_Clicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>