<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Garimpo3.Views.Productions.EditProductionPage"
             xmlns:viewmodels="clr-namespace:Garimpo3.ViewModels.Productions"
             x:DataType="viewmodels:EditProductionViewModel"
             Title="{Binding Title}">    
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="Data"/>
            <DatePicker BindingContext="{Binding Date, Mode=TwoWay}"/>
            
            <Label Text="Quantidade"/>
            <Entry BindingContext="{Binding Amount, Mode=TwoWay}"
                   Keyboard="Numeric"/>
            
            <Button Text="Salvar"
                    IsEnabled="{Binding IsNotBusy}"
                    Command="{Binding SaveCommand}"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>