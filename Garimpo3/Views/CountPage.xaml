<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Garimpo3.Views.CountPage"
             xmlns:viewmodels="clr-namespace:Garimpo3.ViewModels"
             x:DataType="viewmodels:CountViewModel">
    <ContentPage.BindingContext>
        <viewmodels:CountViewModel></viewmodels:CountViewModel>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <Grid RowDefinitions="*,Auto,Auto,*">

            <Label Grid.Row="1" FontSize="Large" HorizontalTextAlignment="Center"  Text="{Binding DisplayText}"/>
            <Button Grid.Row="2" Text="Pow!" Command="{Binding OnIncreaseCount}"/>

        </Grid>        
    </ContentPage.Content>
    
</ContentPage>